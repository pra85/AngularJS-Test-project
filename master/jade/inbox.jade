extends layout/main-layout

block active-item
  - menu['Pages']['active'] = 1
  - menu['Pages']['S']['Mail Inbox']['active'] = 1

block content

  // START action buttons
  .pull-right
    .btn-group
      button.btn.btn-default.btn-sm(type="button", data-toggle="tooltip", data-title="Reply")
        em.fa.fa-fw.fa-mail-reply
      button.btn.btn-default.btn-sm(type="button", data-toggle="tooltip", data-title="Reply All")
        em.fa.fa-fw.fa-mail-reply-all
      button.btn.btn-default.btn-sm(type="button", data-toggle="tooltip", data-title="Forward")
        em.fa.fa-fw.fa-mail-forward
      button.btn.btn-default.btn-sm(type="button", data-toggle="tooltip", data-title="Mark Spam")
        em.fa.fa-fw.fa-exclamation
      button.btn.btn-default.btn-sm(type="button", data-toggle="tooltip", data-title="Delete")
        em.fa.fa-fw.fa-times
  h3 Mail Inbox

  .row
    .col-lg-2.col-md-12
      .clearfix.mb-lg
        button.btn.btn-sm.btn-default.hidden-lg.pull-right(type="button",data-toggle="collapse", data-target=".inbox-boxes")
          em.fa.fa-bars.fa-fw.fa-lg
        button.btn.btn-purple.inbox-compose-button(type="button") 
          strong NEW MAIL
      // START mailbox list
      .inbox-boxes
        .panel.panel-default
          .panel-body
            ul.nav.nav-pills.nav-stacked
              li.active
                a(href='#')
                  span.label.label-primary.pull-right 12
                  em.fa.fa-inbox.fa-fw.fa-lg
                  span Inbox
              li
                a(href='#') 
                  span.label.label-primary.pull-right 6
                  em.fa.fa-star.fa-fw.fa-lg
                  span Starred
              li
                a(href='#') 
                  span.label.label-primary.pull-right 5
                  em.fa.fa-paper-plane-o.fa-fw.fa-lg
                  span Sent
              li
                a(href='#') 
                  span.label.label-primary.pull-right 1
                  em.fa.fa-edit.fa-fw.fa-lg
                  span Drafts
              li
                a(href='#') 
                  span.label.label-primary.pull-right
                  em.fa.fa-trash-o.fa-fw.fa-lg
                  span Trash
              li.p
                form
                  .form-group.has-feedback.m0
                    span.fa.fa-search.form-control-feedback.text-muted
                    input#input-mail-search.form-control(type='text', placeholder="Search here..")
        .panel.panel-default
          .panel-body
            p: small Quota (60%)
            .progress.progress-striped.progress-xs
                .progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                  span.sr-only 60% Complete
      // END mailbox list
    
