extends layout/main-layout

block active-item
  - menu['Forms']['active'] = 1
  - menu['Forms']['S']['Wizard']['active'] = 1

block content
  
  h3 Form Steps Wizard

  // START panel
  .panel.panel-default
    .panel-heading  Form Wizard no validation with progress
    .panel-body
      form(action='/', method='POST')
        .form-wizard.wizard-horizontal(data-toggle="wizard")
          // START wizard steps indicator
          ol.row
            li.col-lg-3.col-xs-12.text-center
              h4 Step One
              small.text-muted Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
            li.col-lg-3.col-xs-12.text-center
              h4 Step Two
              small.text-muted Ut egestas consequat faucibus. 
            li.col-lg-3.col-xs-12.text-center
              h4 Step Three
              small.text-muted Donec nec magna a diam eleifend facilisis non in urna. 
            li.col-lg-3.col-xs-12.text-center
              h4 Confirm
              small.text-muted Sed quam magna, tincidunt ac fermentum eget, vestibulum id magna. 
          
          // span is necessary
          span.progress.progress-striped.m0.progress-sm
            span.progress-bar.progress-bar-primary(style='width: 25%;')  

          // END wizard steps indicator

          // START Wizard Step inputs 
          div
            fieldset
              // START row 
              .row
                .col-md-4
                  .form-group
                    label Username
                    .controls
                      input.form-control(type='text', name='username', placeholder='Your nick here')
                .col-md-4
                  .form-group
                    label Password
                    .controls
                      input.form-control(type='password', name='password', placeholder='Your password')
                .col-md-4
                  .form-group
                    label Retype Password
                    .controls
                      input.form-control(type='password', name='password2', placeholder='Confirmed password')
              // END row 
          // END Wizard Step inputs 
          // START Wizard Step inputs 
          div
            fieldset
              // START row 
              .row
                .col-md-4
                  .form-group
                    label First Name
                    input.form-control(type='text', name='first-name', placeholder='Gordon')
                .col-md-4
                  .form-group
                    label Last Name
                    input.form-control(type='text', name='last-name', placeholder='Hunter')
                .col-md-4
                  .form-group
                    label Email
                    input.form-control(type='text', name='email', placeholder='Gordon@Hunter.com')
              // END row 
          // END Wizard Step inputs 
          // START Wizard Step inputs 
          div
            fieldset
              // START row 
              .row
                .col-md-6
                  .form-group
                    label Address
                    input.form-control(type='text', name='email', placeholder='Your address..')
                .col-md-6
                  .form-group
                    label Phone
                    input.form-control(type='text', name='phone', placeholder='11-2345-6789')
              // END row 
          // END Wizard Step inputs 
          // START Wizard Step inputs 
          div
            p Confirm information
            .row
              .col-sm-2.col-xs-6.text-right
                p: strong User
              .col-sm-10.col-xs-6
                p  HGordon
            .row
              .col-sm-2.col-xs-6.text-right
                p: strong First Name
              .col-sm-10.col-xs-6
                p  Gordon 
            .row
              .col-sm-2.col-xs-6.text-right
                p: strong Last Name
              .col-sm-10.col-xs-6
                p  Hunter 
            .row
              .col-sm-2.col-xs-6.text-right
                p: strong Address
              .col-sm-10.col-xs-6
                p  Some Ave 123, LT, Neverland
            .row
              .col-sm-2.col-xs-6.text-right
                p: strong Phone
              .col-sm-10.col-xs-6
                p  (123) 314 1516
            .text-right
              button.btn.btn-success(type='button') Confirm and Proceed
          // END Wizard Step inputs 
